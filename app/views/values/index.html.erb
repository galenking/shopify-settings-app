<h1>Listing values</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Setting</th>
    <th>Attributes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @values.each do |value| %>
  <tr>
    <td><%= value.name %></td>
    <td><%= value.setting %></td>
    <td><%= value.properties %></td>
    <td><%= link_to 'Show', value %></td>
    <td><%= link_to 'Edit', edit_value_path(value) %></td>
    <td><%= link_to 'Destroy', value, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

