<%= simple_form_for(@setting) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :theme %>
    <%= f.input :field_type %>
    <%= f.input :properties %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
