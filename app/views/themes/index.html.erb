<h1>Listing themes</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

  <% @themes.each do |theme| %>
  <tr>
    <td>
      <%= link_to theme.name, theme %></td>
    <td>
      <div class="btn-group">
        <%= link_to 'Edit', edit_theme_path(theme), class: 'btn btn-mini' %>
        <%= link_to 'Delete', theme, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-mini' %>
      </div>
    </td>
  </tr>
  <% end %>
</table>

<br />

<%= link_to 'New Theme', new_theme_path %>
